{
	"name": "combase-backend",
	"version": "1.0.0",
	"private": true,
	"main": "src/index.js",
	"repository": "git@github.com:GetStream/combase-backend.git",
	"engines": {
		"node": ">=14.x"
	},
	"scripts": {
		"preinstall": "if-env NODE_ENV=production && yarn global add pm2 || echo 'Skipping PM2 dependency installation...'",
		"postinstall": "rm -rf dist && yarn run build",
		"build": "babel src --out-dir dist",
		"start:prod": "pm2-runtime start ecosystem.prod.config.js",
		"start:dev": "pm2-runtime start ecosystem.dev.config.js",
		"make:plugin": "plop [plugin]",
		"dev": "nodemon --exec npx babel-node ./src/api/index.js --inspect",
		"lint": "eslint . --ext .js"
	},
	"author": "GetStream <support@getstream.io>",
	"license": "SEE LICENSE IN LICENSE",
	"eslintConfig": {
		"extends": ".eslintrc.js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,json,md,yml}": [
			"prettier --write",
			"yarn lint"
		]
	},
	"dependencies": {
		"@captain-hook/core": "^0.1.0",
		"@graphql-tools/stitch": "^7.0.4",
		"amqplib": "^0.6.0",
		"apollo-server-express": "^2.19.0",
		"aws-sdk": "^2.799.0",
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"getstream": "^7.0.0",
		"graphql": "^15.4.0",
		"graphql-compose": "^7.23.0",
		"graphql-compose-mongoose": "^9.0.0",
		"graphql-subscriptions": "^1.1.0",
		"http": "^0.0.1-security",
		"if-env": "^1.0.4",
		"jsonwebtoken": "^8.5.1",
		"luxon": "^1.25.0",
		"mongoose": "^5.10.16",
		"mongoose-bcrypt": "^1.9.0",
		"mongoose-field-encryption": "^4.0.0",
		"mongoose-timestamp": "^0.6.0",
		"rascal": "^10.2.6",
		"stream-chat": "^2.8.3",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@babel/cli": "^7.12.8",
		"@babel/core": "^7.12.9",
		"@babel/node": "^7.12.6",
		"@babel/plugin-proposal-class-properties": "^7.12.1",
		"@babel/plugin-transform-runtime": "^7.12.1",
		"@babel/preset-env": "^7.12.7",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.2.1",
		"babel-plugin-inline-dotenv": "^1.6.0",
		"babel-plugin-module-resolver": "^4.0.0",
		"babel-plugin-transform-optional-chaining": "^7.0.0-beta.3",
		"babel-preset-env": "^1.7.0",
		"eslint": "^7.14.0",
		"eslint-config-get-off-my-lawn": "^5.0.1",
		"eslint-plugin-babel": "^5.3.1",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-promise": "^4.2.1",
		"husky": "^4.3.0",
		"lint-staged": "^10.5.2",
		"nodemon": "^2.0.6",
		"prettier": "^2.2.0"
	}
}
