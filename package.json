{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:GetStream/combase-api.git",
  "author": "Nick Parsons <nparsons08@gmail.com>",
  "license": "MIT",
  "scripts": {
    "preinstall": "yarn global add pm2",
    "postinstall": "rm -rf dist && yarn run build",
    "start": "pm2-runtime start ecosystem.prod.config.js",
    "build": "babel src --out-dir dist",
    "dev": "pm2 start ecosystem.dev.config.js && pm2 log",
    "dev:inspect": "nodemon --exec npx babel-node ./src/index.js --inspect",
    "lint": "eslint . --ext .js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,yml}": [
      "prettier --write",
      "yarn lint"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-optional-chaining": "^7.0.0-beta.3",
    "babel-preset-env": "^1.7.0",
    "eslint": "^7.10.0",
    "eslint-config-get-off-my-lawn": "^5.0.1",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2"
  },
  "dependencies": {
    "apollo-server-express": "^2.18.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "graphql-compose": "^7.21.5",
    "graphql-compose-connection": "^8.0.1",
    "graphql-compose-mongoose": "^9.0.0",
    "graphql-scalars": "^1.3.0",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.7",
    "mongoose-bcrypt": "^1.9.0",
    "mongoose-timestamp": "^0.6.0",
    "shortid": "^2.2.15",
    "stream-chat": "^2.5.0",
    "subscriptions-transport-ws": "^0.9.18",
    "winston": "^3.3.3"
  }
