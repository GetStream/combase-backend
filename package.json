{
	"name": "combase-backend",
	"version": "1.0.0",
	"private": true,
	"main": "src/index.js",
	"repository": "git@github.com:GetStream/combase-backend.git",
	"engines": {
		"node": "15.x"
	},
	"scripts": {
		"prebuild": "yarn combase:prepare",
		"predev": "yarn combase:prepare",
		"combase:prepare": "node ./scripts/prepare.js",
		"build": "babel src --out-dir dist",
		"clean": "rm -rf .data",
		"start": "pm2-runtime start pm2.prod.js",
		"start:dev": "pm2-runtime start pm2.dev.js",
		"dev": "nodemon --exec npx babel-node ./src/api/index.js --inspect",
		"lint": "eslint . --ext .js"
	},
	"author": "Stream.io, Inc. <support@getstream.io>",
	"license": "SEE LICENSE IN LICENSE",
	"eslintConfig": {
		"extends": ".eslintrc.js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,json,md,yml}": [
			"prettier --write",
			"yarn lint"
		]
	},
	"dependencies": {
		"@babel/cli": "^7.12.10",
		"@babel/preset-env": "^7.12.11",
		"@combase.app/plugin-autorouting": "^0.0.4",
		"@combase.app/plugin-sendgrid": "^0.0.4",
		"@combase.app/plugin-stream-activity-feeds": "^0.0.4",
		"@graphql-tools/load-files": "^6.2.5",
		"@graphql-tools/merge": "^6.2.7",
		"@graphql-tools/schema": "^7.1.2",
		"@graphql-tools/stitch": "^7.2.1",
		"@stream-io/graphql-feeds": "^0.1.0-alpha.9",
		"apollo-server-express": "^2.19.2",
		"aws-sdk": "^2.831.0",
		"babel-plugin-module-resolver": "^4.1.0",
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"execa": "^5.0.0",
		"express": "^4.17.1",
		"fs-extra": "^9.1.0",
		"getstream": "^7.2.0",
		"graphql": "^15.5.0",
		"graphql-compose": "^7.24.2",
		"graphql-compose-aws": "^5.0.0",
		"graphql-compose-json": "^6.0.0",
		"graphql-compose-mongoose": "^9.0.0",
		"graphql-request": "^3.4.0",
		"graphql-scalars": "^1.7.0",
		"graphql-subscriptions": "^1.1.0",
		"jsonwebtoken": "^8.5.1",
		"lodash.defaultsdeep": "^4.6.1",
		"luxon": "^1.25.0",
		"mime-types": "^2.1.28",
		"mongoose": "^5.11.13",
		"mongoose-bcrypt": "^1.9.0",
		"mongoose-field-encryption": "^4.0.1",
		"mongoose-timestamp": "^0.6.0",
		"ora": "^5.3.0",
		"pm2": "^4.5.1",
		"slash": "^3.0.0",
		"stream-chat": "^2.11.5",
		"uuid": "^8.3.2",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@babel/core": "^7.12.10",
		"@babel/node": "^7.12.10",
		"@babel/plugin-transform-runtime": "^7.12.10",
		"babel-loader": "^8.2.2",
		"concurrently": "^5.3.0",
		"eslint": "^7.18.0",
		"eslint-config-get-off-my-lawn": "^5.0.1",
		"eslint-plugin-babel": "^5.3.1",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-promise": "^4.2.1",
		"husky": "^4.3.8",
		"lint-staged": "^10.5.3",
		"nodemon": "^2.0.7",
		"prettier": "^2.2.1"
	}
}
