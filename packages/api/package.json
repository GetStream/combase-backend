		"aws-sdk": "^2.779.0",
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"crypto-js": "^4.0.0",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"getstream": "^6.2.0",
		"graphql": "^15.4.0",
		"graphql-compose": "^7.22.1",
		"graphql-compose-mongoose": "^9.0.0",
		"http": "^0.0.1-security",
