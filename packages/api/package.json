	"repository": "git@github.com:GetStream/combase-backend.git",
	"engines": {
		"node": ">=14.x"
	},
	"scripts": {
		"preinstall": "if-env NODE_ENV=production && yarn global add pm2 || echo 'Skipping PM2 dependency installation...'",
